{
  "description": "linting for picopt",
  "scripts": {
    "check": "remark . --quiet",
    "fix": "eslint_d --cache --fix --ext .cjs,.mjs.js,.json,.yaml,.md . && prettier --write .",
    "lint": "eslint_d --cache --ext .cjs,.mjs.js,.json,.yaml,.md . && prettier --check ."
  },
  "devDependencies": {
    "@fsouza/prettierd": "^0.20",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-yaml": "^0.5.0",
    "eslint_d": "^12.0.0",
    "markdown-eslint-parser": "^1.2.1",
    "prettier": "^2.5.1",
    "prettier-plugin-ini": "^1.0.0",
    "prettier-plugin-package": "^1.3.0",
    "remark": "^14.0.2",
    "remark-cli": "^10.0.1",
    "remark-gfm": "^3.0.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "arrowParens": "always",
    "tabWidth": 2
  },
  "remarkConfig": {
    "plugins": [
      "gfm",
      "preset-lint-consistent",
      "preset-lint-markdown-style-guide",
      "preset-lint-recommended",
      "preset-prettier"
    ]
  }
}
