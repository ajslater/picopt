{
  "version": "0.1.0",
  "description": "linting",
  "type": "module",
  "scripts": {
    "fix": "eslint_d --cache --fix . && prettier --write .",
    "lint": "eslint_d --cache . && prettier --check ."
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "not op_mini all",
    "not dead"
  ],
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-sh",
      "prettier-plugin-toml"
    ],
    "overrides": [
      {
        "files": [
          "**/*.md"
        ],
        "options": {
          "proseWrap": "always",
          "tabWidth": 4
        }
      },
      {
        "files": [
          "**/*Dockerfile"
        ],
        "options": {
          "parser": "sh"
        }
      }
    ]
  },
  "remarkConfig": {
    "plugins": [
      "gfm",
      "preset-lint-consistent",
      "preset-lint-recommended",
      "preset-lint-markdown-style-guide",
      "preset-prettier"
    ]
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/json": "^1.0.0",
    "@fsouza/prettierd": "^0.26.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "eslint": "^9.39.2",
    "eslint_d": "^14.3.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-array-func": "^5.0.1",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-depend": "^1.0.0",
    "eslint-plugin-import-x": "^4.11.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-no-secrets": "^2.1.1",
    "eslint-plugin-no-unsanitized": "^4.1.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^3.0.0",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-toml": "^1.0.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-yml": "^3.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-toml": "^2.0.1",
    "remark-gfm": "^4.0.1",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-preset-prettier": "^2.0.2"
  }
}
